<%- include('partials/header') -%>

<h1 style="text-align: center">Register</h1>
<div style="margin: auto">
  <form action="/register" method="post">
    <div class="md-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" name="username" id="email" class="form-control" />
    </div>
    <div>
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
      />
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
      <input type="submit" value="Register" class="btn btn-primary mt-4" />
    </div>
    <p style="display: block; text-align: center">Already Registered</p>
    <a href="/login" style="display: block; text-align: center">Go to Login</a>
  </form>
</div>
